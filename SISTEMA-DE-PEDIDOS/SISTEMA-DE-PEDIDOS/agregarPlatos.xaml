<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SISTEMA_DE_PEDIDOS.agregarPlatos">
    <ContentPage.Content>
        
    
        <StackLayout>
            <Label Text="AGREGAR PLATOS" BackgroundColor="Yellow" FontSize="18" HorizontalTextAlignment="Center" TextColor="Black"/>

            <Label  Text="Ingrese los platos llenando todos los capos: " FontSize="14" TextColor="Black" />
            <Entry x:Name="txtNombrePlato" Placeholder="Ingrese Nombre"  Keyboard="Text" />
            <Entry x:Name="txtPrecio" Placeholder="Ingrese precio"
                   Keyboard="Numeric" MaxLength="4"/>
            <Image x:Name="MiImagen"> </Image>
            <Button Text="Tomar foto" Clicked="Button_ClickedTomarFoto"></Button>
            <Button Text="Subir foto" Clicked="Button_ClickedSubirFoto"></Button>
            <Button Text="Agregar" Clicked="Button_ClickedAgregar"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
